<div class="users-top">

<h1>マイページ</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.apples.each do |t| %>
  <%= t.user.name %>
  <%= t.name %>
<% end %>

<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_apples.each do |t| %>
  <%= t.user.name %>
  <%= t.name %>
<% end %>

<ul>
<li><%= link_to "Tweet一覧に戻る", apples_path %></li>
<li><%= link_to "カレンダーページへ", blogs_path %></li>
<li><%= link_to "クイズページへ", perfumes_path %></li>
</ul>

</div>